# Example environment variables
# Copy this file to .env and adjust values as needed

# Enable debug mode (verbose console logging)
VITE_DEBUG=true

# Maximum polygons to render per frame (prevents OOM)
VITE_MAX_POLYGONS_PER_RENDER=100000

# FPS counter update interval in milliseconds
VITE_FPS_UPDATE_INTERVAL=500

# Signaling Server Configuration (for P2P collaboration)
# Use wss:// (WebSocket Secure) for production HTTPS sites
VITE_SIGNALING_SERVER_URL=wss://signaling.gdsjam.com
VITE_SIGNALING_SERVER_TOKEN=your-token-here

# TURN Server Configuration (for WebRTC NAT traversal)
# Password for TURN server authentication (required for file sync)
VITE_TURN_PASSWORD=your-turn-password-here

# File Server Configuration
VITE_FILE_SERVER_URL=https://signaling.gdsjam.com
VITE_FILE_SERVER_TOKEN=your-token-here
